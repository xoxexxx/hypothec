{
    "compilerOptions": {
      // Указываем папку, куда попадёт результат
      "outDir": "./dist",
    },
    // Указываем, какие файлы следует компилировать
    "include": ["src/**/*"],
    // Внешние зависимости обычно исключают из списка компилируемых файлов
    "exclude": ["node_modules"]
  }